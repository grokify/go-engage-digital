        "parameters":[
          {
            "name":"body",
            "description":"Body of the version",
            "in":"query",
            "required":true,
            "schema":{
              "type":"string"
            }
          },
          {
            "name":"entry_id",
            "description":"Reply assistant entry id (mandatory)",
            "in":"query",
            "required":true,
            "schema":{
              "type":"string"
            }
          },
          {
            "name":"source_ids",
            "description":"Source ids (array)",
            "in":"query",
            "required":false,
            "explode":true,
            "schema":{
              "type":"array",
              "items":{
                "type":"string"
              }
            }
          },
          {
            "name":"format",
            "description":"Either “text” or “html”",
            "in":"query",
            "required":false,
            "schema":{
              "type":"string",
              "enum":[
                "text",
                "html"
              ]
            }
          },
          {
            "name":"language",
            "description":"Language (ex: “fr”)",
            "in":"query",
            "required":false,
            "schema":{
              "type":"string"
            }
          }
        ],
        "responses":{
          "200":{
            "description":"Success",
            "content":{
