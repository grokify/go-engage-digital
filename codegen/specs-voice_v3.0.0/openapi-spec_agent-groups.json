          "bearerAuth":{
             "type":"http",
             "scheme":"bearer"
          }
       },
       "schemas":{
        "Error":{
           "type":"object",
            "properties":{
                "generalMessage":{
                    "type":"string"
                 },
                 "details":{
                    "type":"string"
                 },
                 "requestUri":{
                    "type":"string"
                 },
                "timestamp":{
                   "type":"integer",
                   "format":"int64"
                }
             }
          },
        
          "AgentGroup":{
            "type":"object",
            "description": "WIP: `permissions` is an array that needs definition",
             "properties":{
                "agentGroupId":{
                   "type":"integer",
                   "format":"int64"
                },
                "groupName":{
                   "type":"string"
                },
                "isDefault":{
                    "type":"boolean"
                 }
             }
          }
       }
    }
