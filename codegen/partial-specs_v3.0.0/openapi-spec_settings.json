            {
              "name":"identity_merge",
              "in":"query",
              "required":false,
              "description":"enable identity merge (Boolean)",
              "schema":{
                "type":"boolean"
              }
            },
            {
              "name":"intervention_defer_rates[]",
              "in":"query",
              "required":false,
              "description":"(Array of times in seconds)",
              "schema":{
                "type":"array",
                "items":{
                  "type":"integer"
                }
              }
            },
            {
              "name":"intervention_defer_threshold",
              "in":"query",
              "required":false,
              "description":"(in seconds)",
              "schema":{
                "type":"integer"
              }
            },
            {
              "name":"intervention_rates",
              "in":"query",
              "required":false,
              "description":"(Array of times in seconds)",
              "schema":{
                "type":"array",
